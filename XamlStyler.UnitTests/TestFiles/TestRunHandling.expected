<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="{Binding Title}"
        Width="525"
        Height="350">
  <DockPanel Grid.Row="0"
             Grid.RowSpan="1"
             Grid.Column="0"
             Grid.ColumnSpan="1"
             Width="Auto"
             Height="Auto"
             Margin="0,0,0,0"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <StackPanel>
      <!--  one liners  -->
      <TextBlock><Run>A</Run></TextBlock>
      <TextBlock><Run>A</Run><Run>B</Run></TextBlock>
      <TextBlock><Run>C</Run> <Run>D</Run></TextBlock>
      <TextBlock>  <Run>E</Run>   <Run>F</Run>    </TextBlock>
      <!--  Split liners  -->
      <TextBlock>
        <Run>A</Run><Run>B</Run>
      </TextBlock>
      <TextBlock>
        <Run>C</Run> <Run>D</Run>
      </TextBlock>
      <!--  preserve with xml:space  -->
      <TextBlock xml:space="preserve"><Run>A</Run></TextBlock>
      <TextBlock xml:space="preserve"><Run>A</Run><Run>B</Run></TextBlock>
      <TextBlock xml:space="preserve">
    <Run>C</Run><Run>D</Run>
  </TextBlock>
      <TextBlock xml:space="preserve">
    <Run>E</Run> <Run>F</Run>
  </TextBlock>
      <!--  No significant whitespace  -->
      <TextBlock>
        <Run>G</Run>
        <Run>H</Run>
      </TextBlock>
      <!--  Significant whitespace  -->
      <TextBlock>
        <Run>A</Run>
        <Run>
          B
        </Run>
      </TextBlock>
      <TextBlock>
        <Run>C</Run> <Run>
          D
        </Run>
      </TextBlock>
      <!--  Mixing with comments  -->
      <TextBlock>
        <!--  Test  -->
        <Run>I</Run> <Run>J</Run>
        <!--  Test2  -->
      </TextBlock>
    </StackPanel>
  </DockPanel>
</Window>
