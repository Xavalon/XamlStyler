<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    <Extension path="/MonoDevelop/Ide/StartupHandlers">
        <Class class="Xavalon.XamlStyler.Extension.Mac.CommandHandlers.StartupCommandHandler" />
    </Extension>
    
    <Extension path="/MonoDevelop/Ide/MainMenu/Edit">
        <CommandItem id="Xavalon.XamlStyler.Extension.Mac.FormatXaml" />
    </Extension>
    <Extension path="/MonoDevelop/Ide/ContextMenu/DocumentTab">
        <CommandItem id="Xavalon.XamlStyler.Extension.Mac.FormatXaml" />
    </Extension>
    <Extension path="/MonoDevelop/TextEditor/ContextMenu/Editor">
        <CommandItem id="Xavalon.XamlStyler.Extension.Mac.FormatXaml"/>
    </Extension>
    
    <Extension path="/MonoDevelop/Ide/ContextMenu/ProjectPad">
        <Condition id="ItemType" value="Project|Solution">
            <CommandItem id="Xavalon.XamlStyler.Extension.Mac.BatchFormatXaml" />
        </Condition>
    </Extension>
    
    <Extension path="/MonoDevelop/Ide/Commands/Edit">
        <Command 
            id="Xavalon.XamlStyler.Extension.Mac.FormatXaml" 
            _label="Format Xaml" 
            _description="Reformats the XAML document to be much more readable" 
            defaultHandler="Xavalon.XamlStyler.Extension.Mac.CommandHandlers.FormatXamlCommandHandler" 
            macShortcut="Meta|Shift|I" />
        <Command 
            id="Xavalon.XamlStyler.Extension.Mac.BatchFormatXaml" 
            _label="Batch Format Xaml" 
            _description="Reformats all XAML documents to be much more readable"
            defaultHandler="Xavalon.XamlStyler.Extension.Mac.CommandHandlers.BatchFormatXamlCommandHandler" />
    </Extension>
    
    <Extension path="/MonoDevelop/Ide/GlobalOptionsDialog/Other">
        <Section
            id="XamlStylerOptions"
            _label="XamlStyler Options"
            fill="true"
            class="Xavalon.XamlStyler.Extension.Mac.Gui.XamlStylerOptionsPanel" />
    </Extension>
</ExtensionModel>