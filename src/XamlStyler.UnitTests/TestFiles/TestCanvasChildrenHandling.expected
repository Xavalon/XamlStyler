<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF3D"
        Width="534"
        Height="254">

  <Grid>

    <Canvas>
      <TextBlock Canvas.Left="30"
                 Canvas.Top="0"
                 Text="One" />


      <TextBlock Canvas.Left="100" Text="Two" />
      <!--  Comment associated with "Three"  -->
      <TextBlock Canvas.Left="100"
                 Canvas.Top="0"
                 Canvas.Bottom="30"
                 Text="Three" />

      <TextBlock Canvas.Left="100"
                 Canvas.Top="0"
                 Canvas.Right="20"
                 Canvas.Bottom="30"
                 Text="Four" />

    </Canvas>

  </Grid>


</Window>
